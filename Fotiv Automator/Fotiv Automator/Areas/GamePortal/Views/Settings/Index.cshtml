@model Fotiv_Automator.Areas.GamePortal.ViewModels.GameSettingsForm
@{
    ViewBag.Title = string.Format("Game Settings");
}

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            <div class="hidden" id="anti-forgery-container">
                @Html.AntiForgeryToken()
            </div>

            @Html.ValidationSummary()

            <div>
                @Html.HiddenFor(x => x.GameID)
            </div>

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <div>
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description)
            </div>

            <div>
                @Html.LabelFor(x => x.OpenedToPublic)
                @Html.CheckBoxFor(x => x.OpenedToPublic)
            </div>

            <div>
                <input class="btn btn-default updateGameButton" type="submit" value="Update Game" />
            </div>
        }
    </div>

    <div class="col-md-6">
        <a href="@Url.RouteUrl("NewCivilization")" class="btn btn-default pull-right">
            New Civilization
        </a>
    </div>
</div>

<div class="row">
    <a href="@Url.Action("Delete", "Settings", new { gameID = Model.GameID})" 
       class="btn btn-danger"
       data-delete="THIS ACTION IS FINAL. Are you sure you want to delete this Game?">
        <i class="glyphicon glyphicon-remove"></i> Delete Game
    </a>
</div>