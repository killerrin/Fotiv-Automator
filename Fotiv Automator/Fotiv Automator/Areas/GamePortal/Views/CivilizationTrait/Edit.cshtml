@using Fotiv_Automator.Areas.GamePortal
@model Fotiv_Automator.Areas.GamePortal.ViewModels.Forms.CivilizationTraitForm
@{
    ViewBag.Title = string.Format("Edit Civilization Trait");
}

<div class="row">
    @using (Html.BeginForm())
    {

        <div class="hidden" id="anti-forgery-container">
            @Html.AntiForgeryToken()
        </div>

        <div class="col-md-6">
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(x => x.ID)
                @Html.DisplayTextFor(x => x.ID)
                @Html.HiddenFor(x => x.ID)
            </div>

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <div>
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description)
            </div>

            <div>
                @Html.LabelFor(x => x.DomesticInfluenceBonus)
                @Html.EditorFor(x => x.DomesticInfluenceBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ForeignInfluenceBonus)
                @Html.EditorFor(x => x.ForeignInfluenceBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.TradeBonus)
                @Html.EditorFor(x => x.TradeBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyMilitary)
                @Html.CheckBoxFor(x => x.ApplyMilitary)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyUnits)
                @Html.CheckBoxFor(x => x.ApplyUnits)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyShips)
                @Html.CheckBoxFor(x => x.ApplyShips)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyInfrastructure)
                @Html.CheckBoxFor(x => x.ApplyInfrastructure)
            </div>

            <div>
                @Html.LabelFor(x => x.ScienceBonus)
                @Html.EditorFor(x => x.ScienceBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ColonialDevelopmentBonus)
                @Html.EditorFor(x => x.ColonialDevelopmentBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ShipConstructionBonus)
                @Html.EditorFor(x => x.ShipConstructionBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.UnitTrainingBonus)
                @Html.EditorFor(x => x.UnitTrainingBonus)
            </div>

            <input class="btn btn-default editButton" type="submit" value="Edit Civilization Trait" />

            <a href="@Url.Action("Delete", "CivilizationTrait", new { gameID = GameState.Game.ID, civilizationTraitID = Model.ID})"
               class="btn btn-danger"
               data-delete="THIS ACTION IS FINAL. Are you sure you want to delete this?">
                <i class="glyphicon glyphicon-remove"></i> Delete
            </a>
        </div>
    }
</div>