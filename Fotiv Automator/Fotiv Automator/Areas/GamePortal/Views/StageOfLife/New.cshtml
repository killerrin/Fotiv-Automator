@model Fotiv_Automator.Areas.GamePortal.ViewModels.Forms.StageOfLifeForm
@{
    ViewBag.Title = string.Format("New Stage of Life");
}

<div class="row">
    @using (Html.BeginForm())
    {
        <div class="hidden" id="anti-forgery-container">
            @Html.AntiForgeryToken()
        </div>

        <div class="col-md-6">
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <input class="btn btn-default newButton" type="submit" value="Create Stage of Life" />
        </div>
    }
</div>