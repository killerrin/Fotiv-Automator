@model Fotiv_Automator.Areas.GamePortal.ViewModels.ViewCivilization
@{
    ViewBag.Title = Model.Civilization.Info.name;
}

<div class="row">
    <h1>
        @Model.Civilization.Info.name

        @if (Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
        {
            <a href="@Url.RouteUrl("EditCivilization", new { civilizationID = Model.Civilization.Info.id })" class="btn btn-default pull-right">
                Edit Civilization
            </a>
        }
    </h1>

    <div class="col-md-8">
        <h2>Overview</h2>
        <table class="table table-striped sortable">
            <thead>
                <tr>
                    <th data-defaultsort="asc">ID</th>
                    <th>Colour</th>
                    <th>Total RP</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Civilization.Info.id</td>
                    <td style="color:@Model.Civilization.Info.colour;">@Model.Civilization.Info.colour</td>
                    <td>@Model.Civilization.Info.rp</td>
                </tr>
            </tbody>
        </table>

        <hr />

        <h2>Assets</h2>
        <div class="row">
            <ul class="nav nav-pills">
                <li class="active">
                    <a href="#1a" data-toggle="tab">Research &amp; Development</a>
                </li>
                <li>
                    <a href="#2a" data-toggle="tab">Research</a>
                </li>
                <li>
                    <a href="#3a" data-toggle="tab">Infrastructure</a>
                </li>
                <li>
                    <a href="#4a" data-toggle="tab">Military</a>
                </li>
                <li>
                    <a href="#5a" data-toggle="tab">Battlegroups</a>
                </li>
            </ul>

            <div class="tab-content clearfix">
                <div class="tab-pane active" id="1a">
                    <h3>
                        Research
                        @if (Model.Civilization.Assets.HasResearchSlots &&
                            (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) ||
                            Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin()))
                        {
                            <a href="@Url.RouteUrl("NewRnDResearch", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Research
                            </a>
                        }
                    </h3>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>RP Cost</th>
                                <th>Name</th>
                                <th>Build Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var research in Model.Civilization.Assets.IncompleteResearch)
                            {
                                <tr>
                                    <td>@research.Info.id</td>
                                    <td>@research.BeingResearched.rp_cost</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewRnDResearch", new { rndResearchID = research.Info.id })">
                                            @research.BeingResearched.name
                                        </a>
                                    </td>
                                    <td>@research.Info.build_percentage</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h3>
                        Unit Training
                        @if (Model.Civilization.Assets.HasUnitTrainingSlots &&
                            (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) ||
                            Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin()))
                        {
                            <a href="@Url.RouteUrl("NewRnDUnit", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Unit
                            </a>
                        }
                    </h3>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>RP Cost</th>
                                <th>Name</th>
                                <th>Unit Type</th>
                                <th># Built</th>
                                <th>Build Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model.Civilization.Assets.IncompleteGroundUnits)
                            {
                                <tr>
                                    <td>@unit.Info.id</td>
                                    <td>@unit.BeingBuilt.Info.rp_cost</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewRnDUnit", new { rndUnitID = unit.Info.id })">
                                            @unit.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnit", new { unitID = unit.Info.unit_id })">
                                            @unit.BeingBuilt.Info.name
                                        </a>
                                    </td>
                                    <td>@unit.BeingBuilt.Info.number_to_build</td>
                                    <td>@unit.Info.build_percentage</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h3>
                        Ship Construction
                        @if (Model.Civilization.Assets.HasShipConstructionSlots &&
                            (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) ||
                            Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin()))
                        {
                            <a href="@Url.RouteUrl("NewRnDShip", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Ship
                            </a>
                        }
                    </h3>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>RP Cost</th>
                                <th>Name</th>
                                <th>Ship Type</th>
                                <th># Built</th>
                                <th>Build Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ship in Model.Civilization.Assets.IncompleteSpaceUnits)
                            {
                                <tr>
                                    <td>@ship.Info.id</td>
                                    <td>@ship.BeingBuilt.Info.rp_cost</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewRnDUnit", new { rndUnitID = ship.Info.id })">
                                            @ship.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnit", new { unitID = ship.Info.unit_id })">
                                            @ship.BeingBuilt.Info.name
                                        </a>
                                    </td>
                                    <td>@ship.BeingBuilt.Info.number_to_build</td>
                                    <td>@ship.Info.build_percentage</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h3>
                        Colonial Development
                        @if (Model.Civilization.Assets.HasColonialDevelopmentSlots &&
                            (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) ||
                            Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin()))
                        {
                            <a href="@Url.RouteUrl("NewRnDColonialDevelopment", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Colonial Development
                            </a>
                        }
                    </h3>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>RP Cost</th>
                                <th>Planet Name</th>
                                <th>Name</th>
                                <th>Infrastructure Name</th>
                                <th>Build Percentage</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var infrastructure in Model.Civilization.Assets.IncompleteInfrastructure)
                            {
                                <tr>
                                    <td>@infrastructure.Info.id</td>
                                    <td>@infrastructure.BeingBuilt.Infrastructure.rp_cost</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewPlanet", new { planetID = infrastructure.Planet.PlanetID })">
                                            @infrastructure.Planet.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewRnDColonialDevelopment", new { rndColonialDevelopmentID = infrastructure.Info.id })">
                                            @infrastructure.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewInfrastructure", new { infrastructureID = infrastructure.BeingBuilt.Infrastructure.id })">
                                            @infrastructure.BeingBuilt.Infrastructure.name
                                        </a>
                                    </td>
                                    <td>@infrastructure.Info.build_percentage</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="2a">
                    <h3>
                        Completed Research
                        @if (Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                        {
                            <a href="@Url.RouteUrl("NewCivilizationResearch", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Research
                            </a>
                        }
                    </h3>
                    @if (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) || Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                    {
                        <table class="table table-striped sortable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var research in Model.Civilization.Assets.CompletedResearch)
                                {
                                    <tr>
                                        <td>@research.CivilizationInfo.id</td>
                                        <td>
                                            <a href="@Url.RouteUrl("ViewCivilizationResearch", new { civilizationResearchID = research.CivilizationInfo.id })">
                                                @research.ResearchInfo.name
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="tab-pane" id="3a">
                    <h3>
                        Infrastructure
                        @if (Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                        {
                            <a href="@Url.RouteUrl("NewCivilizationInfrastructure", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Civilization Infrastructure
                            </a>
                        }
                    </h3>
                    @if (Model.Civilization.PlayerOwnsCivilization(Model.User.ID) || Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                    {
                        <table class="table table-striped sortable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Infrastructure Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var infrastructure in Model.Civilization.Assets.CompletedInfrastructure)
                                {
                                    <tr>
                                        <td>@infrastructure.CivilizationInfo.id</td>
                                        <td>
                                            <a href="@Url.RouteUrl("ViewCivilizationInfrastructure", new { civilizationInfrastructureID = infrastructure.CivilizationInfo.id })">
                                                @infrastructure.CivilizationInfo.name
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.RouteUrl("ViewInfrastructure", new { infrastructureID = infrastructure.CivilizationInfo.struct_id })">
                                                @infrastructure.InfrastructureInfo.Infrastructure.name
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                <div class="tab-pane" id="4a">
                    <h3>
                        Military
                        @if (Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                        {
                            <a href="@Url.RouteUrl("NewCivilizationUnit", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Civilization Unit
                            </a>
                        }
                    </h3>

                    <h4>Ships</h4>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Ship Name</th>
                                <th>Category Name</th>
                                <th>Battlegroup</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ship in Model.Civilization.Assets.CompletedSpaceUnits)
                            {
                                <tr>
                                    <td>@ship.CivilizationInfo.id</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewCivilizationUnit", new { civilizationUnitID = ship.CivilizationInfo.id })">
                                            @ship.CivilizationInfo.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnit", new { unitID = ship.CivilizationInfo.unit_id })">
                                            @ship.Unit.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnitCategory", new { civilizationUnitID = ship.Unit.UnitCategory.id })">
                                            @ship.Unit.UnitCategory.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewBattlegroup", new { battlegroupID = ship.CivilizationInfo.battlegroup_id })" class="">
                                            @(ship.BattlegroupInfo == null ? "" : ship.CivilizationInfo.battlegroup_id + "-" + ship.BattlegroupInfo.name)
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <h4>Planetary Units</h4>
                    <table class="table table-striped sortable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Unit Name</th>
                                <th>Category Name</th>
                                <th>Battlegroup</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var unit in Model.Civilization.Assets.CompletedGroundUnits)
                            {
                                <tr>
                                    <td>@unit.CivilizationInfo.id</td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewCivilizationUnit", new { civilizationUnitID = unit.CivilizationInfo.id })">
                                            @unit.CivilizationInfo.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnit", new { unitID = unit.CivilizationInfo.unit_id })">
                                            @unit.Unit.Info.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewUnitCategory", new { civilizationUnitID = unit.Unit.UnitCategory.id })">
                                            @unit.Unit.UnitCategory.name
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.RouteUrl("ViewBattlegroup", new { battlegroupID = unit.CivilizationInfo.battlegroup_id })" class="">
                                            @(unit.BattlegroupInfo == null ? "" : unit.CivilizationInfo.battlegroup_id + "-" + unit.BattlegroupInfo.name)
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="5a">
                    <h3>
                        Battlegroups
                        @if (Fotiv_Automator.Infrastructure.Attributes.RequireGMAdminAttribute.IsGMOrAdmin())
                        {
                            <a href="@Url.RouteUrl("NewBattlegroup", new { civilizationID = Model.Civilization.ID })" class="btn btn-default pull-right">
                                New Battlegroup
                            </a>
                        }
                    </h3>

                    <hr />

                    @foreach (var battlegroup in Model.Civilization.Assets.Battlegroups)
                    {
                        <h4>
                            <a href="@Url.RouteUrl("ViewBattlegroup", new { battlegroupID = battlegroup.Info.id })" class="">
                                @battlegroup.Info.id - @battlegroup.Info.name
                            </a>
                        </h4>
                        <table class="table table-striped sortable">
                            <thead>
                                <tr>
                                    <th>Total Ships</th>
                                    <th>Total Health</th>
                                    <th>Total Regeneration Factor</th>
                                    <th>Total Attack</th>
                                    <th>Total Special Attack</th>
                                    <th>Total Agility</th>
                                    <th>Total Embarking Slots</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@battlegroup.TotalUnits</td>
                                    <td>@(battlegroup.CalculateCurrentHealth())/@(battlegroup.CalculateMaxHealth())</td>
                                    <td>@battlegroup.CalculateRegenerationFactor()</td>
                                    <td>@battlegroup.CalculateAttack()</td>
                                    <td>@battlegroup.CalculateSpecialAttack()</td>
                                    <td>@battlegroup.CalculateAgility()</td>
                                    <td>@(battlegroup.CalculateCurrentEmbarked())/@(battlegroup.CalculateMaxEmbarked())</td>
                                </tr>
                            </tbody>
                        </table>

                        <table class="table table-striped sortable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Unit Name</th>

                                    <th>Health</th>
                                    <th>Regeneration</th>
                                    <th>Attack</th>
                                    <th>Special Attack</th>
                                    <th>Special Agility</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var unit in battlegroup.Units)
                                {
                                    <tr>
                                        <td>@unit.CivilizationInfo.id</td>
                                        <td>@unit.Unit.Info.unit_type</td>
                                        <td>
                                            <a href="@Url.RouteUrl("ViewCivilizationUnit", new { civilizationUnitID = unit.CivilizationInfo.id })">
                                                @unit.CivilizationInfo.name
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.RouteUrl("ViewUnit", new { unitID = unit.CivilizationInfo.unit_id })">
                                                @unit.Unit.Info.name
                                            </a>
                                        </td>

                                        <td>@(unit.CivilizationInfo.current_health)/@(unit.CalculateMaxHealth())</td>
                                        <td>@unit.CalculateRegenerationFactor()</td>
                                        <td>@unit.CalculateAttack()</td>
                                        <td>@unit.CalculateSpecialAttack()</td>
                                        <td>@unit.CalculateAgility()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>

        <hr />
    </div>

    <div class="col-md-4">
        <h2>Civilization Traits</h2>
        @if (Model.Civilization.CivilizationTrait1 != null)
        {
            <p>
                <a href="@Url.RouteUrl("ViewCivilizationTrait", new { civilizationTraitID = Model.Civilization.CivilizationTrait1.id })">
                    @Model.Civilization.CivilizationTrait1.name
                </a>
            </p>
        }
        @if (Model.Civilization.CivilizationTrait2 != null)
        {
            <p>
                <a href="@Url.RouteUrl("ViewCivilizationTrait", new { civilizationTraitID = Model.Civilization.CivilizationTrait2.id })">
                    @Model.Civilization.CivilizationTrait2.name
                </a>
            </p>
        }
        @if (Model.Civilization.CivilizationTrait3 != null)
        {
            <p>
                <a href="@Url.RouteUrl("ViewCivilizationTrait", new { civilizationTraitID = Model.Civilization.CivilizationTrait3.id })">
                    @Model.Civilization.CivilizationTrait3.name
                </a>
            </p>
        }

        <h2>Species</h2>
        @foreach (var species in Model.Civilization.SpeciesInfo)
        {
            <p>
                <a href="@Url.RouteUrl("ViewSpecies", new { speciesID = species.id })">
                    @species.name
                </a>
            </p>
        }


        <h2>Owners</h2>
        @foreach (var owner in Model.Civilization.Owners)
        {
            <p>@owner.User.Username</p>
        }

        <h2>Met Civilizations</h2>
        @foreach (var metCivilization in Model.Civilization.MetCivilizations)
        {
            <p>
                <a href="@Url.RouteUrl("ViewCivilization", new { civilizationID = metCivilization.CivilizationTwo.Info.id })">
                    @metCivilization.CivilizationTwo.Info.name
                </a>
            </p>
        }

        @if (Model.User.GameUserInfo.is_gm && !string.IsNullOrWhiteSpace(Model.Civilization.Info.gmnotes))
        {
            <h2>GM Notes</h2>
            <p>@Model.Civilization.Info.gmnotes</p>
        }
    </div>
</div>