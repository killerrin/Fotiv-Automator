@model Fotiv_Automator.Areas.GamePortal.ViewModels.Forms.ShipRateForm
@{
    ViewBag.Title = string.Format("Edit Ship Rate");
}

<div class="row">
    @using (Html.BeginForm())
    {

        <div class="hidden" id="anti-forgery-container">
            @Html.AntiForgeryToken()
        </div>

        <div class="col-md-6">
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(x => x.ID)
                @Html.DisplayTextFor(x => x.ID)
            </div>

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <div>
                @Html.LabelFor(x => x.BuildRate)
                @Html.EditorFor(x => x.BuildRate)
            </div>

            <input class="btn btn-default editShipRateButton" type="submit" value="Edit Ship Rate" />

            <a href="@Url.Action("Delete", "ShipRate", new { shipRateID = Model.ID })"
               class="btn btn-danger"
               data-delete="THIS ACTION IS FINAL. Are you sure you want to delete this Ship Rate?">
                <i class="glyphicon glyphicon-remove"></i> Delete
            </a>
        </div>
    }
</div>