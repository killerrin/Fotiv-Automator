@model Fotiv_Automator.Areas.GamePortal.ViewModels.Forms.ResearchForm
@{
    ViewBag.Title = string.Format("New Research");
}

<div class="row">
    @using (Html.BeginForm())
    {

        <div class="hidden" id="anti-forgery-container">
            @Html.AntiForgeryToken()
        </div>

        <div class="col-md-6">
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <div>
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description)
            </div>

            <div>
                @Html.LabelFor(x => x.RPCost)
                @Html.EditorFor(x => x.RPCost)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyMilitary)
                @Html.CheckBoxFor(x => x.ApplyMilitary)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyUnits)
                @Html.CheckBoxFor(x => x.ApplyUnits)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyShips)
                @Html.CheckBoxFor(x => x.ApplyShips)
            </div>

            <div>
                @Html.LabelFor(x => x.ApplyInfrastructure)
                @Html.CheckBoxFor(x => x.ApplyInfrastructure)
            </div>

            <div>
                @Html.LabelFor(x => x.HealthBonus)
                @Html.EditorFor(x => x.HealthBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.RegenerationBonus)
                @Html.EditorFor(x => x.RegenerationBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.AttackBonus)
                @Html.EditorFor(x => x.AttackBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.SpecialAttackBonus)
                @Html.EditorFor(x => x.SpecialAttackBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.AgilityBonus)
                @Html.EditorFor(x => x.AgilityBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ScienceBonus)
                @Html.EditorFor(x => x.ScienceBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ColonialDevelopmentBonus)
                @Html.EditorFor(x => x.ColonialDevelopmentBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.ShipConstructionBonus)
                @Html.EditorFor(x => x.ShipConstructionBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.UnitTrainingBonus)
                @Html.EditorFor(x => x.UnitTrainingBonus)
            </div>

            <div>
                @Html.LabelFor(x => x.GMNotes)
                @Html.TextAreaFor(x => x.GMNotes)
            </div>

            <input class="btn btn-default newButton" type="submit" value="Create Research" />
        </div>
    }
</div>