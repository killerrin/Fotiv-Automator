@model Fotiv_Automator.Areas.GamePortal.ViewModels.IndexPlanetTiers
@{
    ViewBag.Title = string.Format("Planetary Tiers");
}

<h1>List of Planetary Tiers</h1>

<div class="row">
    <h2>
        Planetary Tiers
        @if (Model.User.GameUserInfo.is_gm)
        {
            <a href="@Url.RouteUrl("NewPlanetTier", new { gameID = Model.User.GameUserInfo.game_id })" class="btn btn-default pull-right">
                New Planetary Tier
            </a>
        }
    </h2>
    <table class="table table-striped sortable">
        <thead>
            <tr>
                <th data-defaultsort="asc">ID</th>
                <th>Name</th>
                <th>Build Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var planetaryTier in Model.PlanetTiers)
            {
                <tr>
                    <td>@planetaryTier.id</td>
                    <td>
                        <a href="@Url.RouteUrl("ViewPlanetTier", new { gameID = Model.User.GameUserInfo.game_id, planetTierID = planetaryTier.id })">
                            @planetaryTier.name
                        </a>
                    </td>
                    <td>@planetaryTier.build_rate</td>
                </tr>
            }
        </tbody>
    </table>
</div>