@model Fotiv_Automator.Areas.GamePortal.ViewModels.GameCivilizations
@{
    ViewBag.Title = string.Format("Game Civilizations");
}

<h1>List of Civilizations</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Your Civilizations</h2>
        <table class="table table-striped sortable">
            <thead>
                <tr>
                    <th data-defaultsort="asc">Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var civilization in Model.Civilizations)
                {
                    foreach (var owner in civilization.Owners)
                    {
                        if (owner.User.ID == Model.User.User.ID)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.RouteUrl("ViewCivilization", new { civilizationID = civilization.Info.id })">
                                        @civilization.Info.name
                                    </a>
                                </td>
                            </tr>

                            break;
                        }
                    }
                }
            </tbody>
        </table>
    </div>

    @if (Model.User.GameUserInfo.is_gm)
    {
        <div class="col-md-6">
            <h2>All Civilizations
                <a href="@Url.RouteUrl("NewCivilization")" class="btn btn-default pull-right">
                    New Civilization
                </a>
            </h2>
            <table class="table table-striped sortable">
                <thead>
                    <tr>
                        <th data-defaultsort="asc">Name</th>
                        <th data-defaultsort='disabled'>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var civilization in Model.Civilizations)
                    {
                        <tr>
                            <td>
                                <a href="@Url.RouteUrl("ViewCivilization", new { civilizationID = civilization.Info.id })">
                                    @civilization.Info.name
                                </a>
                            </td>
                            <td>
                                <a href="@Url.RouteUrl("EditCivilization", new { civilizationID = civilization.Info.id })" class="btn btn-default pull-right">
                                    Edit Civilization
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


