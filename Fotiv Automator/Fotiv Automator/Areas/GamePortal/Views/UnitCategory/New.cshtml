@model Fotiv_Automator.Areas.GamePortal.ViewModels.Forms.UnitCategoryForm
@{
    ViewBag.Title = string.Format("New Unit Category");
}

<div class="row">
    @using (Html.BeginForm())
    {

        <div class="hidden" id="anti-forgery-container">
            @Html.AntiForgeryToken()
        </div>

        <div class="col-md-6">
            @Html.ValidationSummary()

            <div>
                @Html.LabelFor(x => x.Name)
                @Html.EditorFor(x => x.Name)
            </div>

            <div>
                @Html.LabelFor(x => x.BuildRate)
                @Html.EditorFor(x => x.BuildRate)
            </div>

            <div>
                @Html.LabelFor(x => x.IsMilitary)
                @Html.CheckBoxFor(x => x.IsMilitary)
            </div>

            <input class="btn btn-default newButton" type="submit" value="Create Unit Category" />
        </div>
    }
</div>