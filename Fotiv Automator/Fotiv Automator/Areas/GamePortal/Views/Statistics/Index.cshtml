@model Fotiv_Automator.Areas.GamePortal.ViewModels.IndexStatistics
@{
    ViewBag.Title = string.Format("Statistics");
}

<div class="row">
    <h2>
        <a href="@Url.RouteUrl("CivilizationTraits", new { gameID = Model.User.GameUserInfo.game_id })">Civilization Traits</a>
        @if (Model.User.GameUserInfo.is_gm)
        {
            <a href="@Url.RouteUrl("NewCivilizationTrait", new { gameID = Model.User.GameUserInfo.game_id })" class="btn btn-default pull-right">
                New Civilization Trait
            </a>
        }
    </h2>
    <table class="table table-striped sortable">
        <thead>
            <tr>
                <th data-defaultsort="asc">ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trait in Model.Statistics.CivilizationTraits)
            {
                <tr>
                    <td>@trait.id</td>
                    <td>
                        <a href="@Url.RouteUrl("ViewCivilizationTrait", new { gameID = Model.User.GameUserInfo.game_id, civilizationTraitID = trait.id })">
                            @trait.name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>
        <a href="@Url.RouteUrl("Infrastructure", new { gameID = Model.User.GameUserInfo.game_id })">Infrastructure</a>
        @if (Model.User.GameUserInfo.is_gm)
        {
            <a href="@Url.RouteUrl("NewInfrastructure", new { gameID = Model.User.GameUserInfo.game_id })" class="btn btn-default pull-right">
                New Infrastructure
            </a>
        }
    </h2>
    <table class="table table-striped sortable">
        <thead>
            <tr>
                <th data-defaultsort="asc">ID</th>

                <th>Name</th>
                <th>RP Cost</th>

                <th>Colony</th>
                <th>Military</th>

                <th>Base Health</th>
                <th>Base Attack</th>

                <th>RP Bonus</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var infrastructure in Model.Statistics.Infrastructure)
            {
                <tr>
                    <td>@infrastructure.Infrastructure.id</td>

                    <td>
                        <a href="@Url.RouteUrl("ViewInfrastructure", new { gameID = Model.User.GameUserInfo.game_id, infrastructureID = infrastructure.Infrastructure.id })">
                            @infrastructure.Infrastructure.name
                        </a>
                    </td>
                    <td>@infrastructure.Infrastructure.rp_cost</td>

                    <td>@(infrastructure.Infrastructure.is_colony ? "Yes" : "No")</td>
                    <td>@(infrastructure.Infrastructure.is_military ? "Yes" : "No")</td>

                    <td>@infrastructure.Infrastructure.base_health</td>
                    <td>@infrastructure.Infrastructure.base_attack</td>

                    <td>@infrastructure.Infrastructure.rp_bonus</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>
