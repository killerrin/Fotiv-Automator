@using System.Web.Optimization
@using Fotiv_Automator.Areas.GamePortal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainNavbarCenter {
    @{
        var game = Fotiv_Automator.Areas.GamePortal.GameState.Game;
        if (game != null)
        {
            <li><a href="@Url.RouteUrl("Game", new { gameID = GameState.Game.ID })">Overview</a></li>
            <li><a href="@Url.RouteUrl("StarMap", new { gameID = GameState.Game.ID })">Star Map</a></li>
            <li><a href="@Url.RouteUrl("Civilizations", new { gameID = GameState.Game.ID })">Civilizations</a></li>
            <li><a href="@Url.RouteUrl("Statistics", new { gameID = GameState.Game.ID })">Statistics</a></li>
        }
    }
}

@section MainNavbarRight {
    @{
        <li><a href="@Url.RouteUrl("GameSettings", new { gameID = GameState.Game.ID })">Game Settings</a></li>
    }
}

@RenderBody()

@section Scripts {
    @RenderSection("GameScripts", false)
}