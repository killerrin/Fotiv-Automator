@model Fotiv_Automator.ViewModels.ViewCivilization
@{
    ViewBag.Title = Model.Civilization.Info.name;
}

<div class="row">
    <h2>@Model.Civilization.Info.name</h2>
    <div class="col-md-6">
        <table class="table table-striped">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Colour</td>
                    <td>Total RP</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Civilization.Info.id</td>
                    <td style="color:@Model.Civilization.Info.colour;">@Model.Civilization.Info.colour</td>
                    <td>@Model.Civilization.Info.rp</td>
                </tr>
            </tbody>
        </table>

        <a href="@Url.RouteUrl("EditCivilization", new { id = Model.Civilization.Info.id })" class="btn btn-default pull-right">
            Edit Civilization
        </a>

        <div class="row">
            <h3>Notes</h3>
            <p>@Model.Civilization.Info.notes</p>

            @if (Model.User.GameUserInfo.is_gm)
            {
                <h3>GM Notes</h3>
                <p>@Model.Civilization.Info.gmnotes</p>
            }
        </div>
    </div>

    <div class="col-md-6">
        <h2>Owners</h2>
        @foreach (var owner in Model.Civilization.Owners)
        {
            <p>@owner.User.Username</p>
        }
    </div>
</div>