@model Fotiv_Automator.ViewModels.AuthLoginForm
@{
    ViewBag.Title = "Login";
}

<div class="row">
    <div class="col-md-3"> </div>
    <div class="col-md-6">

        <h1>Sign into your account</h1>

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
        
            <div>
                @Html.LabelFor(x => x.Username)
                @Html.EditorFor(x => x.Username)
            </div>
        
            <div>
                @Html.LabelFor(x => x.Password)
                @Html.EditorFor(x => x.Password)
            </div>
        
            <div>
                <input class="btn btn-default loginButton" type="submit" value="Login" />
            </div>
        }

        <h4>Don't have one, <a href="@Url.RouteUrl("createaccount")">Create One</a></h4>
    </div>
    <div class="col-md-3"> </div>
</div>